<%- include('./partials/head', { title: "Register"}) %> 

<nav>
    <ul>
      <li class="navlink"><a href="/login">Login</a></li>
    </ul>
</nav>

<body>
    <h1>Register Form</h1>
    <form action="/register" method="POST">
        <div>
            <label>Status</label><br>
            <input type="radio" id="admin" name="status" value="admin">
            <label for="admin">Admin</label><br>
            <input type="radio" id="customer" name="status" value="customer">
            <label for="customer">Customer</label><br>
        </div>

        <div>
            <label>Email</label><br>
            <input type="email" name="email" id="email" placeholder="Email address"><br>
            <label>Username</label><br>
            <input type="text" name="username" id="username" placeholder="Username"><br>
            <label>Password</label><br>
            <input type="password" name="password" id="password"><br>
        </div>
        
        <div>
            <label>Name</label><br>
            <input name='name' type="text" placeholder="Abimaung Mamaung"><br>
            <label>No.KTP / Kartu Identitas</label><br>
            <input name='ktp' type="text" placeholder="3217071212120001"><br>
            <label>Age</label><br>
            <input name='age' type="text" placeholder="8-70"><br>
        </div>
        

        <button type="submit">Submit</button>
    </form>
</body>

</html>