<%- include('./partials/head', { title: "Edit Vinnyl"}) %> 

<%- include('./partials/navbar') %> 

<body>
    <button><a href="/vinnyl/add">Add Vinnyl</a></button>
    <table style="margin:auto ;min-width: 60%; max-width: 80%;" class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Genre</th>
                <th scope="col">Singer</th>
                <th scope="col">Released Year</th>
                <th scope="col">Cover</th>
                <th scope="col">Restriction Age and Rating</th>
                <th scope="col">Price</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <% vinnyl.forEach( el => { %>
            <tr>
                <td><%= el.name %></td>
                <td><%= el.genre %></td>
                <td><%= el.singer %></td>
                <td><%= el.released_year %></td>
                <td><img width="100" height="100" src="<%= el.cover_url %>"></td>
                <td><%= el.restriction_age %> with Rating <%= el.Rating() %> </td>
                <td><%= el.price_perday %></td>
                <td><a href="/vinnyl/edit/<%= el.id %>">Edit</a> |
                    <a href="/vinnyl/delete/<%= el.id %>">Delete</a> | 
                    <a href="/vinnyl/addrent/<%= el.id %>">Rent IT!</a>
                </td>
            </tr>
            <% }) %>
    </table>
</body>
</html>